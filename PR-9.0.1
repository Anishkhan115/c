#include <stdio.h>
void main()
    {
        int i,n,sum,mod;
        sum=0;
        printf("enter the number :");
        scanf("%d",&n);
        for(i=1;n!=0;i++)
        {
            mod=n%10;
            sum=sum+mod;
            n=n/10;
        }
             printf("sum of the digits are %d",sum);
    }
    
